<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/bezierview"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.anim.bod.animset.view.BezierView
        android:id="@+id/bezier"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview"
        android:background="@drawable/lottery_animlist"
        app:layout_constraintTop_toBottomOf="@+id/bezier"
        app:layout_constraintLeft_toLeftOf="@+id/bezier"
        android:layout_width="200dp"
        android:layout_height="100dp" />

</android.support.constraint.ConstraintLayout>